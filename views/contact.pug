extends base.pug

block scripts   
    script
      include ../static/script.js

block style 
    style 
        include ../static/style.css
        include ../static/contact.css

block content
    div#contact
        h1 Contact Us 
        div.contact
            form(action="/contact", method="post")
                input(type="text" class="myinput" name="name" placeholder="Enter your name")
                input(type="number", class="myinput" name="phone" placeholder="Enter your number")
                input(type="email", class="myinput" name="email" placeholder="Enter your email")
                input(type="text" class="myinput" name="query" placeholder="Enter any query/suggestion") 
                button.btn Submit 